@import "../../utils/iconfont.wxss";
@import "../../utils/iconfont2.wxss";
/* banner组件 */
@import "components/banner/banner.wxss";
.canteen-detail{
	padding: 20rpx;
	background: #fff;
	color: #666;
	font-size: 26rpx;
}
/*点餐选项 - 使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*点餐选项 - 对话框 */
.commodity_attr_box {
  height: 300rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  padding-top: 20rpx;
}
.commodity-ico-box{
  background-color: #fff;
  border-radius: 10rpx;
  margin: auto;
}

.commodity-navbar__icon {
  margin: 0 auto;
  display: block;
  font-size: 60rpx;
}

